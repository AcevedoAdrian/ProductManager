<div class=" py-10 ">
  <h1 class="text-4xl my-10 font-extrabold text-center"></h1>
  <h2 class="text-center text-2xl font-extrabold">Restablecimiento de contraseña</h2>
  {{#if error}}
  <div class="max-w-md mx-auto my-10">
    <p class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold "> {{error}} </p>
  </div>
  {{/if}}
  <div class=" mt-8 mx-auto max-w-md">
    <div class="bg-white py-8 px-4 shadow">
      <form class="space-y-5" action="/api/sessions/reset-password/{{user}}" method="post">
        <div>
          <label for="email">Nueva contraseña:</label>
          <input type="password" name="password" id="password" placeholder="Nueva contraseña" required>
        </div>
     
        <div class="flex item-center justify-between ">
          <a class="text-gray-500 text-xs  hover:text-teal-500 hover:font-semibold " href="/">Login</a>
          <a class="text-gray-500 text-xs  hover:text-teal-500 hover:font-semibold " href="/register">Registrate</a>
        </div>

        <div>

          <input class=" w-full bg-teal-600 text-white font-bold py-3 cursor-pointer hover:bg-teal-700" type="submit"
            value="Cambiar Contraseña">

        </div>
      </form>

    </div>
  </div>
</div>