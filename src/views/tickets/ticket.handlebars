<div class=" py-10 ">
  <h1 class="text-4xl my-10 font-extrabold text-center"></h1>
  <h2 class="text-center text-2xl font-extrabold">Ticket Compra</h2>
  {{#if error}}
  <div class="max-w-md mx-auto my-10">
    <p class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold "> {{error}} </p>
  </div>
  {{/if}}
  <div class=" mt-8 mx-auto max-w-md">
    <div class="bg-white py-8 px-4 shadow">
      <div class="space-y-5" id="list-products-cart">
        <div class="flex justify-between mb-6">          
          <div class="text-gray-700">
            <h1 class="text-lg font-bold">Ticket</h1>
            <div>Fecha: {{ticket.purchase_datetime}}</div>
            <div>Numero: {{ticket.code}}</div>
          </div>
        </div>
          <hr class="mb-2">
          <div class="mb-8">
            <h2 class="text-lg font-bold mb-4">Cliente:</h2>
            <div class="text-gray-700 mb-2">{{user.full_name}}</div>
            <div class="text-gray-700">{{user.email}}</div>
          </div>
        <hr class="mb-2">
        <h2 class="text-lg font-bold mb-4">Detalle:</h2>
        {{#each ticket.products}}
        <item class="flex justify-between mb-4" data-product-id='{{this.product._id}}'>
          <div class="flex items-center">
            <div>
              <h3 class="font-bold">{{this.product.title}}</h3>
              <p class="text-gray-700">{{this.product.category}}</p>
            </div>
          </div>
          <div class="flex items-center">
            <div class="mx-4">
              <input type="number" data-product-stock="{{this.quantity}}" value={{this.quantity}} class="w-16 text-center">
            </div>
            <span class="font-bold">${{this.product.price}}</span>
          </div>
        </item>
        {{/each}}
      </div>
      {{!--
      <hr class="my-4"> --}}
      <hr class="my-4">
      <div class="flex justify-between items-center">
        <span class="font-bold">Total:</span>
        <span class="font-bold">$ {{ticket.amount}}</span>
      </div>
      <div class="text-gray-700 mb-2">Gracias por su compra!</div>
      <div class="text-gray-700 text-sm">Por favor envíe el pago dentro de los 30 días.</div>
        <div class="flex item-center justify-between mt-5">
          <a class="text-gray-500 text-xs  hover:text-teal-500 hover:font-semibold " href="/products">Ver Productos</a>
        </div>
    </div>


  </div>
</div>