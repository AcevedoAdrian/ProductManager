<div class=" py-10 ">
  <h1 class="text-4xl my-10 font-extrabold text-center"></h1>
  <h2 class="text-center text-2xl font-extrabold">Carrito</h2>
  {{#if error}}
  <div class="max-w-md mx-auto my-10">
    <p class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold "> {{error}} </p>
  </div>
  {{/if}}
  <div class=" mt-8 mx-auto max-w-md">
    <div class="bg-white py-8 px-4 shadow">
      <div class="space-y-5" id="list-products-cart">
        {{#each cartByID.products}}
        <item class="flex justify-between mb-4" data-product-id='{{this.product._id}}'>
        <div class="flex items-center">
          <img src="https://via.placeholder.com/80" alt="Product Image" class="mr-4">
          <div>
            <h2 class="font-bold">{{this.product.title}}</h2>
            <p class="text-gray-700">{{this.product.category}}</p>
          </div>
        </div>
        <div class="flex items-center">
          <button class="text-red-500 hover:text-red-700"><i class="fas fa-trash"></i></button>
          <div class="mx-4">
            <input type="number" data-product-stock="{{this.quantity}}"  value={{this.quantity}} class="w-16 text-center">
          </div>
          <span  class="font-bold">${{this.product.price}}</span>
        </div>
      </item>
      {{/each}}
      </div>
      {{!-- <hr class="my-4"> --}}
      <hr class="my-4">
      <div class="flex justify-between items-center">
        <span class="font-bold">Total:</span>
        <span class="font-bold">$ {{cartByID.totalCart}}</span>
      </div>
      <div class="flex justify-center mt-6">
        <input onClick="finishBuyCartController(`{{cartByID._id}}`)" class="w-full bg-teal-600 text-white font-bold py-3 cursor-pointer over:bg-teal-700" value="Checkout">
      </div>
      </div>

    
  </div>
</div>


<script src="/js/cart.js"></script>